{
  "tests": [
    {
      "name": "Missing authorization",
      "method": "DELETE",
      "path": "/",
      "body": {
        "slug": "test-card"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Authorization required"
      }
    },
    {
      "name": "Invalid token",
      "method": "DELETE",
      "path": "/",
      "headers": {
        "X-Auth-Token": "invalid_token_12345"
      },
      "body": {
        "slug": "test-card"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Invalid token"
      }
    }
  ]
}
